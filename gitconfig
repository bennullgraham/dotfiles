# vim: set filetype=gitconfig : 

[color]
    ui = auto
    diff = auto

[push]
    default = current

[alias]
    a = !git config -l | grep alias
    au = !git add -u && git status
    ci = commit
    co = checkout
    df = diff
    ds = diff --staged
    dv = !git diff | view -
    dvs = !git diff --staged | view -
    dw = diff --word-diff=color
    dws = diff --staged --word-diff=color
    gr = log --abbrev-commit --pretty=format:'%C(yellow)%h%Creset%C(red)%d%Creset %s %C(blue)%an%Creset %Cgreen(%cr)%Creset' --graph --decorate
    lg = log --abbrev-commit --pretty=format:'%C(yellow)%h%Creset%C(red)%d%Creset %s %C(blue)%an%Creset %Cgreen(%cr)%Creset' --graph --decorate
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    pa = !git pull --rebase && git submodule update --init
    pr = pull --rebase
    re = rebase
    st = status
    tc = !git log --oneline | egrep -o '\\[[a-z]+\\]' | sort | uniq -c | sort -n --reverse

[core]
    excludesfile = ~/.gitignore

[include]
    path = ~/.gitconfig.local

[user]
    name = Ben Graham
    email = bgraham@bgraham.com.au
